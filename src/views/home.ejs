<body>
  <h1>Todas as Salas Abaixo!</h1>
  <form action="/join">
    <input type="submit" value="Criar uma Sala">

    <div class="rooms">
      <% rooms.forEach((room, index) => { %>
        <div class="room">
          <p>Usuarios conectados: <%= room.users.length %></p>
          <a href="/room/<%= room.room_id %>">Sala <%= index+1 %></a>
        </div>
      <% }); %>
    </div>
  </form>
</body>
</html>