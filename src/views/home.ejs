  <script>
    function joinRoom(room_id){
      const username = document.getElementById("username").value;

      if(!username) return alert("Você precisa por um usuario");

      window.location.replace(`/room/${room_id}/${username}`);
    }

    function createRoom(){
      const username = document.getElementById("username").value;

      if(!username) return alert("Você precisa por um usuario");

      window.location.replace(`/join/${username}`);
    }
  </script>
</body>
