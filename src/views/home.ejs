<body>
  <div class="app">
    <div class="header">
      <h1>Hopevel Chat</h1>
      <div class="input">
        <input id="username" type="text" placeholder="Usuario">
        <button onclick="javascript:createRoom()">Nova Sala</button>
      </div>
    </div>
    <div class="body">
      <div class="rooms">
        <% rooms.forEach((room, index) => { %>
          <div class="room">
            <h2>Sala <%= index+1 %></h2>
            <div>
              <p>Usuarios conectados: <%= room.users.length %></p>
              <button onclick="javascript:joinRoom('<%= room.room_id%>')">ENTRAR</button>
            </div>
          </div>
        <% }); %>
      </div>
      <div class="users">
        <p>Pedro</p>
        <p>Carlos</p>
        <p>Antonio</p>
      </div>
    </div>
  </div>
